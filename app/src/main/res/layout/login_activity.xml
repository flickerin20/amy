<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="60%"
        android:layout_centerHorizontal="true"
        android:paddingTop="@android:dimen/app_icon_size"
        android:id="@+id/tvBanner"
        android:text="Affordable Matrimony"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80px"
        android:gravity="center"
        android:textAlignment="center"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="25%"
        android:layout_below="@+id/tvBanner"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Email"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="50px"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPassword"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="25%"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:text="Password"
        android:textSize="50px"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/evUserName"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evUserName"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="70%"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/tvUserName"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="30%"
        android:id="@+id/registerbutton"
        android:text="Register"
        android:background="@color/colorPrimary"

        android:textColor="@color/white"
        android:textSize="50px"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        android:layout_centerHorizontal="true"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evPassword"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="50%"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/tvPassword"></EditText>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvForgotPassword"
    app:layout_heightPercent="5%"
    app:layout_widthPercent="50%"
    android:text="Forgot Password?"
    android:textSize="30px"
    android:textAlignment="center"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/evPassword"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="50%"
        android:text="LET'S FIND"
        android:background="@color/colorPrimaryDark"
        android:textSize="50px"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvForgotPassword"></TextView>


</androidx.percentlayout.widget.PercentRelativeLayout>